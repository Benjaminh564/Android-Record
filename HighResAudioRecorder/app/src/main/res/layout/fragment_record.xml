<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG_Color"
    tools:context=".fragment_record">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/fragment_record_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tap to Start Recording"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_record_Record_Button"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/fragment_record_Record_Button"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:background="#00000000"
        android:backgroundTint="#00000000"
        android:scaleType="fitEnd"
        android:tint="#ED675C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:src="@drawable/ic_roundedrectangle" />

    <ImageView
        android:id="@+id/fragment_record_Record_Button_Icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:backgroundTint="@color/Button_Red"
        android:src="@drawable/ic_baseline_fiber_manual_record_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        tools:ignore="SpeakableTextPresentCheck"
        tools:src="@drawable/ic_baseline_fiber_manual_record_24" />

    <TextView
        android:id="@+id/fragment_record_Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="00:00:00"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/fragment_record_Record_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>